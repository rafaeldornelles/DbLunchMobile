<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_vote_result_restaurant_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurante"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/item_vote_result_restaurant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        tools:text="Equilibrio"
        app:layout_constraintStart_toStartOf="@id/item_vote_result_restaurant_label"
        app:layout_constraintEnd_toStartOf="@id/item_vote_restaurant_progress"
        app:layout_constraintTop_toBottomOf="@id/item_vote_result_restaurant_label"/>
    <TextView
        android:id="@+id/item_vote_result_votes_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Votos: "
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_vote_result_votes"/>
    <TextView
        android:id="@+id/item_vote_result_votes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/item_vote_restaurant_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/item_vote_result_restaurant"
        app:layout_constraintBottom_toBottomOf="@id/item_vote_result_restaurant"
        app:layout_constraintStart_toEndOf="@id/item_vote_result_restaurant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias=".6"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progress="25"
        />

</androidx.constraintlayout.widget.ConstraintLayout>